@model IEnumerable<Restauranteprueba.Models.Reserva>
@{
	ViewData["Title"] = "Lista de Reservaciones";
	Layout = "/Views/Shared/_Layout.cshtml";
}
<h2>Lista de reservas</h2>

<div class="container">
	<div class="col-3">
		<a class="btn btn-primary text-white from-control" asp-action="Crear"> Agregar reservacion</a>
		<div class="row mt-2"></div>
		<a class="btn btn-primary text-white from-control" asp-action="CrearMultiples"> Agregar multiples reservaciones</a>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			@if (Model.Count() > 0)
			{
				<table class="table table-striped border">
					<thead>
						<tr>
							<th>IdReserva</th>
							<th>IdCliente</th>
							<th>IdMesa</th>
							<th>FechaHoraReserva</th>
							<th>EstadoReserva</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var reserva in Model)
						{
							<tr>
								<td>@reserva.IdReserva</td>
								<td>@reserva.IdCliente</td>
								<td>@reserva.IdMesa</td>
								<td>@reserva.FechaHoraReserva</td>
								<td>@reserva.EstadoReserva</td>
							</tr>
						}
					</tbody>
				</table>
			}
			else
			{
				<p>No hay resevaciones a listar</p>
			}
		</div>
	</div>
</div>