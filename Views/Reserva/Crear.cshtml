@model Restauranteprueba.Models.Reserva
@{
	ViewData["Title"] = "Agregar nuevo resevacion";
	Layout = "/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Crear">
	<div class="container">
		<div class="col-6">
			<h2>Agregar pago</h2>
		</div>
		<div class="row mt-5">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-12">

				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="IdCliente" class="form-label"></label>
						<input asp-for="IdCliente" class="form-control" />
						<span asp-validation-for="IdCliente" class="text-danger"></span>
					</div>
				</div>
				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="IdMesa" class="form-label"></label>
						<input asp-for="IdMesa" class="form-control" />
						<span asp-validation-for="IdMesa" class="text-danger"></span>
					</div>
				</div>
				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="FechaHoraReserva" class="form-label"></label>
						<input asp-for="FechaHoraReserva" class="form-control" />
						<span asp-validation-for="FechaHoraReserva" class="text-danger"></span>
					</div>
				</div>
				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="EstadoReserva" class="form-label"></label>
						<input asp-for="EstadoReserva" class="form-control" />
						<span asp-validation-for="EstadoReserva" class="text-danger"></span>
					</div>
				</div>
				<div class="row mt-5">
					<div class="col-4">
						<button class="btn btn-secondary text-white form-control" type="submit">Guardar &nbsp;</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>