@model IEnumerable<Restauranteprueba.Models.Valoracion>
@{
	ViewData["Title"] = "Lista de Valoraciones";
	Layout = "/Views/Shared/_Layout.cshtml";
}
<h2>Lista de valoraciones</h2>

<div class="container">
	<div class="col-3">
		<a class="btn btn-primary text-white from-control" asp-action="Crear"> Agregar valoracion</a>
		<div class="row mt-2"></div>
		<a class="btn btn-primary text-white from-control" asp-action="CrearMultiples"> Agregar multiples valoraciones</a>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			@if (Model.Count() > 0)
			{
				<table class="table table-striped border">
					<thead>
						<tr>
							<th>IdValoracion</th>
							<th>IdCliente</th>
							<th>Comentario</th>
							<th>Puntuacion</th>
							<th>FechaValoracion</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var valoracion in Model)
						{
							<tr>
								<td>@valoracion.IdValoracion</td>
								<td>@valoracion.IdCliente</td>
								<td>@valoracion.Comentario</td>
								<td>@valoracion.Puntuacion</td>
								<td>@valoracion.FechaValoracion</td>
							</tr>
						}
					</tbody>
				</table>
			}
			else
			{
				<p>No hay valoraciones a listar</p>
			}
		</div>
	</div>
</div>